@model CheckoutViewModel

@{
    ViewBag.Title = "Checkout";
}
<div class="row">
    <div class="col-md-4">
        <form asp-action="Checkout" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="AccountName" class="control-label">Account Name</label>
                <input asp-for="AccountName" class="form-control" />
                <span asp-validation-for="AccountName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AccountCountry" class="control-label">Country</label>
                <input asp-for="AccountCountry" class="form-control" />
                <span asp-validation-for="AccountCountry" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ServerName" class="control-label">Server</label>
                <input asp-for="ServerName" class="form-control" />
                <span asp-validation-for="ServerName" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
        </form>
    </div>
</div>
