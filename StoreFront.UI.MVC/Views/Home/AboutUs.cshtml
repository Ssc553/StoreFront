@{
    ViewData["Title"] = "About Us";
}



<div class="why-choose-section">
	<div class="container">
		<div class="row justify-content-between">
			<div class="col-lg-6">
				<h2 class="section-title">Why Choose Us</h2>
				<p>We make sure every customer is satisfied and happy with every purchase!</p>

				<div class="row my-5">
					<div class="col-6 col-md-6">
						<div class="feature">
							<div class="icon">
								<img src="~/images/truck.svg" alt="Image" class="imf-fluid">
							</div>
							<h3>Fast &amp; Free Shipping</h3>
							<p>All purchases ship within an hour of checkout!</p>
						</div>
					</div>

					<div class="col-6 col-md-6">
						<div class="feature">
							<div class="icon">
								<img src="~/images/bag.svg" alt="Image" class="imf-fluid">
							</div>
							<h3>Easy to Shop</h3>
							<p>Just click the items you want and go to the checkout!</p>
						</div>
					</div>

					<div class="col-6 col-md-6">
						<div class="feature">
							<div class="icon">
								<img src="~/images/support.svg" alt="Image" class="imf-fluid">
							</div>
							<h3>24/7 Support</h3>
							<p>Operators are standing by 24 hours a day, 7 days a week!</p>
						</div>
					</div>

					<div class="col-6 col-md-6">
						<div class="feature">
							<div class="icon">
								<img src="~/images/return.svg" alt="Image" class="imf-fluid">
							</div>
							<h3>Hassle Free Returns</h3>
							<p>If for any reason you are unhappy with your purchase, we offer a 48 hour no questions asked return.</p>
						</div>
					</div>

				</div>
			</div>

			<div class="col-lg-5">
				<div class="img-wrap about-img">
					<img src="~/images/resurrected.jpg" class="about-img img-fluid" alt="Image">
				</div>
			</div>

		</div>
	</div>
</div>


<!-- End Why Choose Us Section -->
<!-- Start Team Section -->
<div class="untree_co-section">
	<div class="container">

		<div class="row mb-5">
			<div class="col-lg-5 mx-auto text-center">
				<h2 class="section-title">Our Team</h2>
			</div>
		</div>

		<div class="row">

			<!-- Start Column 1 -->
			<div class="col-12 col-md-6 col-lg-3 mb-5 mb-md-0 mx-auto ">
				<img src="~/images/ScottCousino.jpg" class="img-fluid mb-5">
				<h2 class="text-light"><a href="#" class="text-light">Scott Cousino</a></h2>
				<span class="d-block position mb-4">Developer</span>
				<p>
					Owner, Operator, and Creator of this site.
				</p>
				<p class="mb-0"><a href="#" class="more dark">Learn More <span class="icon-arrow_forward"></span></a></p>
			</div>
			<!-- End Column 1 -->
			



		</div>
	</div>
</div>
<!-- End Team Section -->
<div class="testimonial-section">
